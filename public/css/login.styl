body
  line-height 22px
  font-size 12px
  font-family arial,"\5B8B\4F53"
  color #666
  background #fff url(../img/common/bg_uc.jpg) left top no-repeat
  -webkit-text-size-adjust none
  background-size 100% auto
  .login-wrap
    margin auto
    width 960px
    position relative
    .login-dl
      margin-top 100px
      float right
      width 428px
      height 468px
      background #fff
      border-radius 4px
      box-shadow 0 11px 18px rgba(35,16,5,.2)
      opacity 93
      dt
        height 75px
        text-align center
        color #f9f9f9
        font 30px/74px "\5FAE\8F6F\96C5\9ED1","黑体"
        border-bottom 1px #ddd9d6 solid
        border-radius 4px 4px 0
        background #353234
        background -webkit-gradient(linear, left top, left bottom, from(#454246), to(#312d2e))
      dd
        padding 35px 38px
        font-size 14px
        .login-list
          margin 25px 0
          padding 0 8px
          border 1px solid #a3a3a3
          border-radius 2px
          li
            padding 20px 8px
            height 32px
            border-bottom 1px solid #a3a3a3
            &:last-child
              border-bottom none
            .icon-name
              background url(../img/common/ico_user.png) center no-repeat
            span
              display inline-block
              margin-right 10px
              width 30px
              height 30px
              vertical-align -8px
            input
              width 260px
              padding 5px
              height 20px
              font-size 14px
              font-weight 700
              font-family verdana
              border 0
              background transparent
            .icon-pass
              background url(../img/common/ico_pass.png) center no-repeat
         .login-btn
           margin-top 20px
           .btn-orange
              width 100%
              height 75px
              font 28px/74px "\5FAE\8F6F\96C5\9ED1","黑体"
              text-align center
              color #fff
              border none
              border-radius 4px
              cursor pointer
              background #ff762c
              background -webkit-gradient(linear, left top, left bottom, from(#ff7c2e), to(#ff702a))
              background -moz-linear-gradient(top, #ff7c2e, #ff702a)
              background linear-gradient(to bottom, #ff7c2e, #ff702a)